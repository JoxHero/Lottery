<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ScrollView
        android:scrollbars="none"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:id="@+id/topbar"
                android:background="@mipmap/personal_top_bg">

                <ImageView
                    android:id="@+id/slidingmenu_touxiang"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/personnal_icon" />

                <TextView
                    android:id="@+id/slidingmenu_Name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#ffffff"
                    android:text="我的账户"
                    android:textSize="30dp"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/slidingmenu_touxiang"
                    android:layout_marginLeft="15dp" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/My_history"
                android:layout_width="fill_parent"
                android:layout_height="55dp"
                android:clickable="true"
                android:focusable="true"
                android:background="@drawable/menu_selector">

                <ImageView
                    android:layout_marginLeft="8dp"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/My_history_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:focusable="false"
                    android:src="@mipmap/microbbs_type_ggbl" />

                <TextView
                    android:text="购彩记录"
                    android:textSize="22dp"
                    android:textColor="#000000"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/My_history_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:focusable="false"/>
            </LinearLayout>
            <View
                android:layout_width="fill_parent"
                android:layout_height="2.0px"
                android:background="#ffe2e2e2"
                android:layout_marginLeft="12dp" />
            <LinearLayout
                android:id="@+id/My_success"
                android:layout_width="fill_parent"
                android:layout_height="55dp"
                android:clickable="true"
                android:focusable="true"
                android:background="@drawable/menu_selector">

                <ImageView
                    android:layout_marginLeft="8dp"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/My_success_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/microbbs_type_jctj" />

                <TextView
                    android:text="中奖记录"
                    android:textSize="22dp"
                    android:textColor="#000000"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/My_success_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <View
                android:layout_width="fill_parent"
                android:layout_height="2.0px"
                android:background="#ffe2e2e2"
                android:layout_marginLeft="12dp" />
            <LinearLayout
                android:id="@+id/My_fail"
                android:layout_width="fill_parent"
                android:layout_height="55dp"
                android:clickable="true"
                android:focusable="true"
                android:background="@drawable/menu_selector">

                <ImageView
                    android:layout_marginLeft="8dp"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/My_fail_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_p_draft" />

                <TextView
                    android:text="赔钱记录"
                    android:textSize="22dp"
                    android:textColor="#000000"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/My_fail_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <View
                android:layout_width="fill_parent"
                android:layout_height="2.0px"
                android:background="#ffe2e2e2" />
            <View
                android:layout_width="fill_parent"
                android:layout_height="2.0px"
                android:background="#ffe2e2e2"
                android:layout_marginTop="20dp"/>
            <LinearLayout
                android:id="@+id/My_add"
                android:layout_width="fill_parent"
                android:layout_height="55dp"
                android:clickable="true"
                android:focusable="true"
                android:background="@drawable/menu_selector">

                <ImageView
                    android:layout_marginLeft="8dp"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/My_add_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_p_mytwitter" />

                <TextView
                    android:text="添加记录"
                    android:textSize="22dp"
                    android:textColor="#000000"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/My_add_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <View
                android:layout_width="fill_parent"
                android:layout_height="2.0px"
                android:background="#ffe2e2e2"
                android:layout_marginLeft="12dp" />
            <LinearLayout
                android:id="@+id/My_modify"
                android:layout_width="fill_parent"
                android:layout_height="55dp"
                android:clickable="true"
                android:focusable="true"
                android:background="@drawable/menu_selector">

                <ImageView
                    android:layout_marginLeft="8dp"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/My_modify_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_p_mynote" />

                <TextView
                    android:text="修改记录"
                    android:textSize="22dp"
                    android:textColor="#000000"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/My_modify_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <View
                android:layout_width="fill_parent"
                android:layout_height="2.0px"
                android:background="#ffe2e2e2"/>
            <View
                android:layout_width="fill_parent"
                android:layout_height="2.0px"
                android:background="#ffe2e2e2"
                android:layout_marginTop="20dp"/>
            <LinearLayout
                android:id="@+id/My_wallet"
                android:layout_width="fill_parent"
                android:layout_height="55dp"
                android:clickable="true"
                android:focusable="true"
                android:background="@drawable/menu_selector">

                <ImageView
                    android:layout_marginLeft="8dp"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/My_wallet_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_p_wallet" />

                <TextView
                    android:text="我的钱包"
                    android:textSize="22dp"
                    android:textColor="#000000"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/My_wallet_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <View
                android:layout_width="fill_parent"
                android:layout_height="2.0px"
                android:background="#ffe2e2e2"
                android:layout_marginLeft="12dp" />
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="55dp"
                android:clickable="true"
                android:focusable="true"
                android:background="@drawable/menu_selector">

                <ImageView
                    android:layout_marginLeft="8dp"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/My_setting_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_p_setting" />

                <TextView
                    android:text="我的设置"
                    android:textSize="22dp"
                    android:textColor="#000000"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/My_setting_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <View
                android:layout_width="fill_parent"
                android:layout_height="2.0px"
                android:background="#ffe2e2e2"/>
            <Button
                android:id="@+id/quit"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="#ffff0033"
                android:textColor="#FFFFFF"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="15dp"
                android:text="退出登录"
                android:textSize="23dp" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>